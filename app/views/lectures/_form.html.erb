

<%= form_with(model: lecture, local: true) do |form| %>
  <% if lecture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(lecture.errors.count, "error") %> prohibited this lecture from being saved:</h2>

      <ul>
      <% lecture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :lecture_title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.cktext_area :content, :class => 'anyclas', :ckeditor => {:language => 'uk', :uiColor => '#AADC6E', :toolbar => 'mini'},id: :lecture_content %>
  </div>

  <div class="field">
    <%= form.label :attachment %>
    <%= form.file_field :attachment, id: :lecture_attachment %>
  </div>

  <div class="field">
    <%= form.label :course_id %>
    <%= form.select :course_id,options_for_select(Course.all.map{|c|[c.title, c.id]}), id: :lecture_course_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
